<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tanvir.tractivity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tractivity">
        <activity android:name="com.tanvir.tractivity.BaseActivity"></activity>
        <activity android:name="com.tanvir.tractivity.ProjectActivity" />
        <activity
            android:name="com.tanvir.tractivity.TractivityMain"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name="com.tanvir.tractivity.SignUpActivity"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.tanvir.tractivity.LoginActivity"
            android:theme="@style/NoActionBarTheme"
            android:windowSoftInputMode="stateVisible|adjustResize"
            />
        <activity
            android:name="com.tanvir.tractivity.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>